@model IEnumerable<ASPdotNETBlog.Models.Article>

@{
    ViewBag.Title = "Articles";
}

<h2>Articles</h2>
@if (User.IsInRole("admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create",null, new { @class="button"})
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Author)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Text)
        </td>
        <td>
            @if(User.IsInRole("admin"))
            {
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }, new { @class="button-article no-bot-border"})<br>
                @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { @class = "button-article no-bot-border" })<br>
            }
            @Html.ActionLink("Details", "Details", new { id=item.Id }, new { @class = "button-article" })<br>
        </td>
    </tr>
}

</table>